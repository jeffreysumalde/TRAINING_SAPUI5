<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="simpleform.controller.View1"><Page id="page" title="{i18n>title}" icon="sap-icon://save">
    <content>
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
            <sap.ui.layout.form:content>
                <sap.ui.core:Title text="Simple Form" id="title0"/>
                <Label text="Name" id="name"/>
                <Input width="100%" id="IDname"/>
                <Label text="Street/No" id="street_no"/>
                <Input width="70%" id="IDstreet"/>
                <Input width="30%" id="IDnumber"/>
                <Label text="ZIP Code/City" id="zip_code_city"/>
                <Input width="30%" id="IDzip_code"/>
                <Input width="70%" id="IDcity"/>
                <Label text="Country" id="IDcountry"/>
                 <Select xmlns="sap.m" id="select1" width="auto">
                  <items>
                   <core:Item xmlns:core="sap.ui.core" key="item-key-0" text="Please select" id="item0"/>
                   <core:Item xmlns:core="sap.ui.core" key="item-key-1" text="England" id="item1"/>
                   <core:Item xmlns:core="sap.ui.core" key="item-key-2" text="Germany" id="item2"/>
                   <core:Item xmlns:core="sap.ui.core" key="item-key-3" text="USA" id="item3"/>
                   <core:Item xmlns:core="sap.ui.core" key="item-key-4" text="Philippines" id="item4"/>
                  </items>           
                </Select>      
                </sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>
           <Button xmlns="sap.m" text="SAVE" id="button0" activeIcon="sap-icon://save" busyIndicatorSize="Small" />
           <Button xmlns="sap.m" text="CLEAR" id="ClearButton" activeIcon="sap-icon://refresh" busyIndicatorSize="Small" press="onPress"/>        
    </content>
    </Page>
</mvc:View>